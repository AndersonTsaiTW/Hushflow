# Copy this file to passwords.yaml and fill in your actual values
# passwords.yaml is gitignored and will NOT be committed

development:
  # Serverpod core (required)
  database: 'your-dev-db-password'
  redis: ''                 # Leave empty if redis.enabled: false
  serviceSecret: ''         # For Serverpod Insights server-to-server auth
  
  # Gmail OAuth (get from Google Cloud Console)
  gmailClientId: 'your-client-id.apps.googleusercontent.com'
  gmailClientSecret: 'your-client-secret'
  gmailRedirectUri: 'http://localhost:8082/auth/callback'
  
  # OpenAI (for summaries and TTS)
  openaiApiKey: 'sk-...'

staging:
  database: 'your-staging-db-password'
  redis: 'your-staging-redis-password'
  serviceSecret: 'your-staging-service-secret'
  gmailClientId: 'your-staging-client-id.apps.googleusercontent.com'
  gmailClientSecret: 'your-staging-client-secret'
  gmailRedirectUri: 'https://staging.your-domain.com/auth/callback'
  openaiApiKey: 'sk-...'

production:
  database: 'your-prod-db-password'
  redis: 'your-prod-redis-password'
  serviceSecret: 'your-prod-service-secret'
  gmailClientId: 'your-prod-client-id.apps.googleusercontent.com'
  gmailClientSecret: 'your-prod-client-secret'
  gmailRedirectUri: 'https://your-domain.com/auth/callback'
  openaiApiKey: 'sk-...'
